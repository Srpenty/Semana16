@model IEnumerable<Semana16.Models.Movie>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Movies" asp-action="Index">
    <input type="text" name="search" placeholder="Buscar" />
    <input type="submit" value="Buscar"/>
 </form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.price)
            </th>
            <th>Aciiones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id"><img src = "IMG/editar.png" width="20"/></a> |
                <a asp-action="Details" asp-route-id="@item.id"><img src ="IMG/info.png" width="20"/></a> |
                <a asp-action="Delete" asp-route-id="@item.id"><img src = "IMG/delete.png" width="20"/></a>
            </td>
        </tr>
}
    </tbody>
</table>
